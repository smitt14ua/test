<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Мой первый Symfony проект{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a href="{{ url('news') }}" class="navbar-brand">Symfony</a>
        </div>
    </nav>
</header>
<main class="flex-shrink-0">
    <div class="container">
        {% block body %}{% endblock %}
    </div>
</main>
<footer class="footer mt-auto py-3">
    <div class="container">
        <span class="text-muted">Подвал сайта</span>
    </div>
</footer>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
